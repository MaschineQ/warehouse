{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block bread %}
    â†’ Products
{% endblock %}

{% block body %}
    <div class="bg-white border rounded shadow mb-2">
        <div class="p-3">
            {% if categories|length > 0 %}
            <a href="{{ path('app_product_add') }}">
            <i class="fas fa-plus fa-fw mr-3 text-green-600"></i><span class="pb-1 md:pb-0 text-sm">Add Product</span>
            </a>
            {% else %}
            <div class="pb-2 text-red-600">
                There is no category. Please create a category first.
            </div>
            <div>
                <a href="{{ path('app_category_add') }}">
                    <i class="fas fa-plus fa-fw mr-3 text-red-600"></i><span class="pb-1 md:pb-0 text-sm">Add Category</span>
                </a>
            </div>
            {% endif %}
        </div>
    </div>
    <div class="w-full">
        <!--Table Card-->
        <div class="bg-white border rounded shadow">
            <div class="border-b p-3">
                <h5 class="font-bold uppercase text-gray-600">Products</h5>
            </div>
            <div class="p-5">
                {% if products|length > 0 %}
                <table class="w-full p-5 text-gray-700">
                    <thead>
                    <tr>
                        <th class="text-left text-blue-900">Name</th>
                        <th class="text-left text-blue-900">Quantity</th>
                        <th class="text-left text-blue-900">Quantity per Piece</th>
                        <th class="text-left text-blue-900">Unit</th>
                        <th class="text-left text-blue-900">Packaging</th>
                        <th class="text-left text-blue-900">Label</th>
                        <th class="text-left text-blue-900">Category</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for product in products %}
                    <tr>
                        <td><a href="{{ path('app_product_edit', { product: product.id }) }}">{{ product.name }}</a></td>
                        <td>{{ product.quantity }}</td>
                        <td>{{ product.quantityPerPiece }}</td>
                        <td>{{ product.packagingType }}</td>
                        <td>{{ product.packaging }}</td>
                        <td>{{ product.label }}</td>
                        <td>{{ product.category.name }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% else %}
                    <div class="text-center">
                        No products.
                    </div>
                {% endif %}
            </div>
        </div>
        <!--/table Card-->
    </div>
{% endblock %}
