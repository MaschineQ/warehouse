{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block bread %}
    â†’ Products
{% endblock %}

{% block body %}
    <div class="w-full">
        <!--Table Card-->
        <div class="bg-white border rounded shadow">
            <div class="border-b p-3">
                <h5 class="font-bold uppercase text-gray-600">Products</h5>
            </div>
            <div class="p-5">
                <table class="w-full p-5 text-gray-700">
                    <thead>
                    <tr>
                        <th class="text-left text-blue-900">Name</th>
                        <th class="text-left text-blue-900">Quantity</th>
                        <th class="text-left text-blue-900">Category</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for product in products %}
                    <tr>
                        <td><a href="{{ path('app_product_edit', { product: product.id }) }}">{{ product.name }}</a></td>
                        <td>{{ product.quantity }}</td>
                        <td>{{ product.category.name }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
        <!--/table Card-->
    </div>
{% endblock %}
