{{ form_start(form) }}
{% if form_errors(form) %}
<div class="rounded-md p-2 border-red-300 bg-red-50 border mb-4">{{ form_errors(form) }}</div>
{% endif %}

<div>
    {{ form_label(form.expeditionDate, 'Please enter the date', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
    {{ form_widget(form.expeditionDate, {'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
    {{ form_errors(form.expeditionDate) }}
</div>

<div>
    {{ form_label(form.product, 'Please select product', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
    {{ form_widget(form.product, {'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
    {{ form_errors(form.product) }}
</div>

<div>
    {{ form_label(form.quantity, 'quantity', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
    {{ form_widget(form.quantity, {'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
    {{ form_errors(form.quantity) }}
</div>

<button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:gb-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">{{ 'Save'|trans }}</button>
{{ form_end(form)}}