{% extends 'base.html.twig' %}

{% block title %}{{ 'Category'|trans }}{% endblock %}

{% block bread %}
    â†’ Category
{% endblock %}

{% block body %}
    <div class="bg-white border rounded shadow mb-2">
        <div class="p-3">
            <a href="{{ path('app_category_add') }}">
                <i class="fas fa-plus fa-fw mr-3 text-green-600"></i><span class="pb-1 md:pb-0 text-sm">{{ 'Add Category'|trans }}</span>
            </a>
        </div>
    </div>
    <div class="w-full">
        <!--Table Card-->
        <div class="bg-white border rounded shadow">
            <div class="border-b p-3">
                <h5 class="font-bold uppercase text-gray-600">{{ 'Category'|trans }}</h5>
            </div>
            <div class="p-5">
                {% if categories|length > 0 %}
                <table class="w-full p-5 text-gray-700">
                    <thead>
                    <tr>
                        <th class="text-left text-blue-900">{{ 'Name'|trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><a href="{{ path('app_category_edit', { category: category.id }) }}">{{ category.name }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% else %}
                <div class="text-center">
                    {{ 'No categories.'|trans }}
                </div>
                {% endif %}
            </div>
        </div>
        <!--/table Card-->
    </div>
{% endblock %}
